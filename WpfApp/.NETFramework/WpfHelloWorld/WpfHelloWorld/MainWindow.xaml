<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="640" ShowActivated="False">
    <Grid>
        <TextBox Height="20" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" xml:space="preserve" Text="lots of space &quot;   &quot;." Name="textBox"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,35,20,40" VerticalAlignment="Top" Width="90" Height="30" Click="Button_Click"/>
    </Grid>
</Window>
