<PageFunction
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="PageFunctionDemo.PageFunction1"
    xmlns:local="clr-namespace:PageFunctionDemo"
    x:TypeArguments="local:Product"
    Title="PageFunction1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Name="listProducts">
            <ListBoxItem>Ice</ListBoxItem>
            <ListBoxItem>Snow</ListBoxItem>
            <ListBoxItem>Gold</ListBoxItem>
        </ListBox>
        <TextBlock Grid.Row="1">
            <Hyperlink Click="linkOK_Click">OK</Hyperlink>
            <Hyperlink Click="linkCancel_Click">Cancel</Hyperlink>
        </TextBlock>
    </Grid>
</PageFunction>
