<Page x:Class="PageDemo.Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PageDemo"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="Page1">
    <StackPanel Margin="3">
        <TextBlock Margin="3" TextWrapping="Wrap">
            This is a simple page, click 
            <Hyperlink NavigateUri="https://www.baidu.com">here</Hyperlink>
            to open baidu
        </TextBlock>
        <Button Margin="2" Padding="2">OK</Button>
        <Button Margin="2" Padding="2">Close</Button>
    </StackPanel>
</Page>
