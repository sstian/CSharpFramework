<Window x:Class="SpeechSynthesizerDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="300">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Name="textWord" Margin="5" TextWrapping="Wrap">Hello, World</TextBox>
        <Button Grid.Row="1" Margin="5" Click="buttonSpeek_Click">Speak</Button>
        <Button Grid.Row="2" Margin="5" Click="buttonPrompt_Click">Prompt</Button>
        <Button Grid.Row="3" Margin="5" Click="buttonPromptAppendText_Click">Prompt AppendTextWithHist</Button>
    </Grid>
</Window>
